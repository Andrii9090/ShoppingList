<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="StyleText">
        <item name="android:textColor">@color/text_color</item>
    </style>
    <style name="ListItemStyle" parent="StyleText">
        <item name="android:textSize">@dimen/ItemTitleTextSize</item>
    </style>

    <style name="Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="ExpensiveFragmentButtonLeft" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/shape_background_btn_left</item>
    </style>
    <style name="ExpensiveFragmentButtonRight" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/shape_background_btn_right</item>
    </style>

    <style name="PeriodButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorSecondary</item>
    </style>
    <style name="BtnNormal" parent="Widget.MaterialComponents.Button">
        <item name="background">?attr/colorPrimary</item>
    </style>

    <style name="OutLineButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="strokeWidth">2dp</item>
    </style>
</resources>