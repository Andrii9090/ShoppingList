<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_main"
        tools:context=".app.item.ItemActivity">

        <include
            android:id="@+id/user_settings_toolbar"
            layout="@layout/toolbar_main"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_profile"
            android:id="@+id/user_settings_img_profile"
            app:layout_constraintEnd_toEndOf="@+id/user_settings_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_settings_toolbar" />

        <Button
            android:id="@+id/user_settings_copy_uid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_copy_uid"
            style="@style/OutLineButton"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_settings_img_profile" />

        <EditText
            android:id="@+id/user_settings_email"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@+id/user_settings_copy_uid" />

        <EditText
            android:id="@+id/user_settings_password"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/user_old_password"
            android:padding="16dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/user_settings_email" />

        <EditText
            android:id="@+id/user_settings_new_password"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/user_new_password"
            android:padding="16dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/user_settings_password" />

        <EditText
            android:id="@+id/user_settings_new_password2"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/user_new_password2"
            android:padding="16dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/user_settings_new_password" />

        <Button
            android:id="@+id/user_settings_btn_change_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            style="@style/OutLineButton"
            android:text="@string/text_change_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_settings_new_password2" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/user_settings_loading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@id/user_settings_toolbar"
            android:indeterminateOnly="true"
            tools:visibility="visible" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_settings_btn_save"
            android:text="@string/text_save"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@+id/user_settings_new_password2" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/nav_view"
        layout="@layout/navigation" />
</androidx.drawerlayout.widget.DrawerLayout>